<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class=" d-flex justify-content-center ">
            <div class="card mb-3 w-50" style="width: 18rem;">
                <img src="<%= foundRental.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= foundRental.title %>
                    </h5>
                    <p class="card-text">
                        <%= foundRental.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= foundRental.price %>/hour
                    </li>
                    <li class="list-group-item text-muted">
                        <%= foundRental.location %>
                    </li>
                    <div class="class-body">
                        <a class="btn btn-warning m-3" href="/rentals/<%= foundRental._id %>/edit">Edit rental</a>

                        <form class=" d-inline" action="/rentals/<%= foundRental._id %>?_method=delete" method="post">
                            <button class="btn btn-danger">Delete rental</button>
                        </form>
                    </div>
                    <div class="card-footer">
                        <a href="/rentals">All rentals</a>
                    </div>
            </div>
        </div>
    </div>